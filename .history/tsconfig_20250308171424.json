{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["ESNext"],
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": ["zotero-types"],
    "typeRoots": [
      "./node_modules/@types", 
      "./src/types",
      "./node_modules/zotero-types"
    ],
    "strict": true,
    "outDir": "build/dist/",
    "skipLibCheck": true
  },
  "include": ["src", "typings"],
  "exclude": ["build", "addon"]
}